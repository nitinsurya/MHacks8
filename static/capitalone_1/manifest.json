{
  "manifest_version": 2,

  "name": "CapitalOne",
  "description": "Your all in one subscription manager",
  "version": "2.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*","*://*.spotify.com/*"],
      "js": ["myscript.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "tabs",
	"notifications"
  ]
}
